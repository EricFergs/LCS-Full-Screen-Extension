{
  "manifest_version": 3,
  "name": "MyLearn FullScreen",
  "version": "1.0",
  "description": "The LCS interface can be difficult to navigate and doesnâ€™t allow full screen. This extension lets you view lessons in fullscreen.",
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/128.png"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://mylearn.oracle.com/*"
    ]
}